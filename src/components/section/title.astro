---
export type Props = {
	class?: string;
	title: string;
	subtitle?: string;
	miniTitle?: string;
};
const { class: className, title, subtitle, miniTitle } = Astro.props as Props;
---

<div class={`text-center mx-auto w-full max-w-xl mb-14 ${className}`}>
	{
		miniTitle !== undefined && (
			<h4 class="font-sans font-semibold text-xs tracking-widest uppercase mb-3 text-primary-500">{miniTitle}</h4>
		)
	}
	<h2 class="font-sans text-4xl font-semibold mb-4 text-slate-800">{title}</h2>
	{subtitle !== undefined && <p class="text-lg text-slate-500">{subtitle}</p>}
</div>
